{% extends 'layouts/front/base.html.twig' %}

{% block title %}{{ parametres.structure ? parametres.structure.name : company_name }} - Connectez vous à votre administration{% endblock %}

{% block body %}
    <div class="py-32pt navbar-submenu">
        <div class="container-fluid page__container">
            <div class="progression-bar progression-bar--active-accent">
                <a href="{{ path('home') }}" class="progression-bar__item progression-bar__item--complete">
                    <span class="progression-bar__item-content">
                        <i class="material-icons progression-bar__item-icon">done</i>
                        <span class="progression-bar__item-text h5 mb-0 text-uppercase">Accueil</span>
                    </span>
                </a>
                <a href="javascript:" class="progression-bar__item progression-bar__item--complete progression-bar__item--active">
                    <span class="progression-bar__item-content">
                        <i class="material-icons progression-bar__item-icon"></i>
                        <span class="progression-bar__item-text h5 mb-0 text-uppercase">Créer un compte</span>
                    </span>
                </a>
                <a href="{{ path('security_login') }}" class="progression-bar__item">
                    <span class="progression-bar__item-content">
                        <i class="material-icons progression-bar__item-icon"></i>
                        <span class="progression-bar__item-text h5 mb-0 text-uppercase">Se connecter</span>
                    </span>
                </a>
            </div>
        </div>
    </div>
    <div class="page-section container-fluid page__container">
        <div class="col-lg-10 p-0 mx-auto">
            <div class="row">
                <div class="col-md-6 mb-24pt mb-md-0">
                    {{ form_start(form, {'action': path('security_register'), 'attr': {'id': 'registerForm', 'novalidate': 'novalidate'}}) }}
                        <div id="message-error"></div>
                        <div class="form-group">
                            <label class="form-label" for="name">{{ form_label(form.username) }}</label>
                            {{ form_widget(form.username) }}
                            <div id="message-error-username" class="invalid-feedback">{{ form_errors(form.username) }}</div>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="email">{{ form_label(form.email) }}</label>
                            {{ form_widget(form.email) }}
                            <div id="message-error-email" class="invalid-feedback">{{ form_errors(form.email) }}</div>
                        </div>
                        <div class="form-group mb-24pt">
                            <label class="form-label" for="password">{{ form_label(form.password.first) }}</label>
                            {{ form_widget(form.password.first) }}
                            <div id="message-error-password-first" class="invalid-feedback">{{ form_errors(form.password.first) }}</div>
                        </div>
                        <div class="form-group mb-24pt">
                            <label class="form-label" for="password">{{ form_label(form.password.second) }}</label>
                            {{ form_widget(form.password.second) }}
                            <div id="message-error-password-second" class="invalid-feedback">{{ form_errors(form.password.second) }}</div>
                        </div>
                        <div class="form-group mb-24pt">
                            <div id="message-error-terms" class="invalid-feedback">{{ form_errors(form.terms) }}</div>
                            <div style="display: flex; flex-direction: row">
                                {{ form_widget(form.terms) }}
                                <label for="terms" class="form-label">Termes & conditions d'utilisations</label>
                            </div>
                            <small class="form-text text-muted">En cochant cette case, j'accepte les Termes & conditions d'utilisations</small>
                        </div>
                        <button id="btnRegister" type="submit" class="btn btn-primary">Créer mon compte</button>
                    {{ form_end(form) }}
                </div>
                <div class="col-md-6">
                    <div class="card mb-0">
                        <div class="card-body">
                            <h5>Purchase summary</h5>
                            <div class="d-flex mb-8pt">
                                <div class="flex"><strong class="text-70">Abonnement</strong></div>
                                <strong>Etudiants</strong>
                            </div>

                            <div class="alert alert-soft-warning">
                                <div class="d-flex flex-wrap align-items-start">
                                    <div class="mr-8pt">
                                        <i class="material-icons">check</i>
                                    </div>
                                    <div class="flex" style="min-width: 180px">
                                        <small class="text-100">
                                            Access to over 1.000 high quality courses. <strong>For individuals.</strong>
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex mb-16pt pb-16pt border-bottom">
                                <div class="flex"><strong class="text-70">Prix</strong></div>
                                <strong>Gratuit</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-separator justify-content-center m-0">
        <div class="page-separator__text">ou inscrivez vous via</div>
    </div>
    <div class="page-section text-center">
        <div class="container-fluid page__container">
            <a href="javascript:" class="btn btn-secondary btn-block-xs">Facebook</a>
            <a href="javascript:" class="btn btn-secondary btn-block-xs">Twitter</a>
            <a href="javascript:" class="btn btn-secondary btn-block-xs">Google+</a>
        </div>
    </div>
{% endblock %}

