{% extends 'layouts/front/base.html.twig' %}

{% block title %}{{ parametres.structure ? parametres.structure.name : company_name }} - Connectez vous à votre administration{% endblock %}

{% block body %}
    <div class="py-32pt navbar-submenu">
        <div class="container-fluid page__container">
            <div class="progression-bar progression-bar--active-accent">
                <a href="{{ path('home') }}" class="progression-bar__item progression-bar__item--complete">
                    <span class="progression-bar__item-content">
                        <i class="material-icons progression-bar__item-icon">home</i>
                        <span class="progression-bar__item-text h5 mb-0 text-uppercase">Accueil</span>
                    </span>
                </a>
                <a href="javascript:" class="progression-bar__item progression-bar__item progression-bar__item--active">
                    <span class="progression-bar__item-content">
                        <i class="material-icons progression-bar__item-icon">lock</i>
                        <span class="progression-bar__item-text h5 mb-0 text-uppercase">Se connecter</span>
                    </span>
                </a>
                <a href="{{ path('security_register') }}" class="progression-bar__item progression-bar__item--complete">
                    <span class="progression-bar__item-content">
                        <i class="material-icons progression-bar__item-icon">people</i>
                        <span class="progression-bar__item-text h5 mb-0 text-uppercase">Créer un compte</span>
                    </span>
                </a>
            </div>
        </div>
    </div>
    <div class="page-section container-fluid page__container">
        <form id="loginForm" method="post" action="{{ path('security_login') }}">
            <div class="col-lg-10 p-0 mx-auto">
                <div class="row">
                    <div class="col-md-6 mb-24pt mb-md-0">
                        {% if error %}
                            <div class="alert alert-danger">
                                <h6>{{ error }}</h6>
                            </div>
                        {% endif %}
                        <div id="message-error"></div>
                        {% include 'flash/__message.html.twig' %}
                        {% if app.user %}
                            <div class="mb-3">
                                Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('security_logout') }}">Déconnexion</a>
                            </div>
                        {% endif %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="form-group mb-24pt">
                            <label class="form-label" for="email">Adresse email</label>
                            <div class="input-group input-group-merge">
                                <input type="email" class="form-control form-control-appended" name="email" id="email" value="{{ app.session.get(constant('App\\Controller\\Security\\SecurityController::LAST_EMAIL')) }}" placeholder="Votre adresse email *" autofocus required />
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="material-icons">email</span>
                                    </div>
                                </div>
                                <div id="message-email" class="invalid-feedback"></div>
                            </div>
                        </div>

                        <div class="form-group mb-24pt">
                            <label class="form-label" for="password">Mot de passe</label>
                            <div class="input-group input-group-merge">
                                <input type="password" class="form-control pwd form-control-appended" name="password" id="password" placeholder="Votre mot de passe *" required />
                                <div class="input-group-append reveal">
                                    <div class="input-group-text">
                                        <span class="material-icons">remove_red_eye</span>
                                    </div>
                                </div>
                                <div id="message-password" class="invalid-feedback"></div>
                            </div>
                        </div>
                        <div class="d-flex form-group mb-24pt" style="justify-content: space-between!important;">
                            <label class="custom-control custom-checkbox m-0">
                                <input type="checkbox" class="custom-control-input" id="remember_me" name="remember_me"/>
                                <span class="custom-control-label">Se souvenir de moi</span>
                            </label>
                            <span>
                                <a href="{{ path('app_forgot_password_request') }}" class="d-block small">Mot de passe oublié?</a>
                            </span>
                        </div>
                        <button id="btnLogin" type="submit" class="btn btn-primary">
                            <i class="material-icons">lock</i> &nbsp;
                            Se connecter
                        </button>
                    </div>
                    <div class="col-md-6">
                        <div class="card mb-0">
                            <div class="card-body">
                                <h5>Purchase summary</h5>
                                <div class="d-flex mb-8pt">
                                    <div class="flex"><strong class="text-70">Abonnement</strong></div>
                                    <strong>Etudiants</strong>
                                </div>

                                <div class="alert alert-soft-warning">
                                    <div class="d-flex flex-wrap align-items-start">
                                        <div class="mr-8pt">
                                            <i class="material-icons">check</i>
                                        </div>
                                        <div class="flex" style="min-width: 180px">
                                            <small class="text-100">
                                                Access to over 1.000 high quality courses. <strong>For individuals.</strong>
                                            </small>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex mb-16pt pb-16pt border-bottom">
                                    <div class="flex"><strong class="text-70">Prix</strong></div>
                                    <strong>Gratuit</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    {#<div class="page-separator justify-content-center m-0">
        <div class="page-separator__text">ou connectez vous via</div>
    </div>
    <div class="page-section text-center">
        <div class="container-fluid page__container">
            <a href="javascript:" class="btn btn-secondary btn-block-xs">Facebook</a>
            <a href="javascript:" class="btn btn-secondary btn-block-xs">Twitter</a>
            <a href="javascript:" class="btn btn-secondary btn-block-xs">Google+</a>
        </div>
    </div>#}
{% endblock %}

