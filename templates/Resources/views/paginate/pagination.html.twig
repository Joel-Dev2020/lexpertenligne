{#
/**
 * @file
 * Twitter Bootstrap v4-beta.2 Sliding pagination control implementation.
 *
 * View that can be used with the pagination module
 * from the Twitter Bootstrap CSS Toolkit
 * https://getbootstrap.com/docs/4.4/components/pagination/
 *
 */
#}
{% if pageCount > 1 %}
    {% set classAlign = (align is not defined) ? '' : align=='center' ? ' justify-content-center' : (align=='right' ? ' justify-content-end' : '') %}
    {% set classSize = (size is not defined) ? '' : size=='large' ? ' pagination-lg' : (size=='small' ? ' pagination-sm' : '') %}
    <div class="card p-8pt mb-0 d-inline-block">
        <ul class="pagination justify-content-start pagination-xsm m-0{{ classAlign }}{{ classSize }}">
            {% if previous is defined %}
                <li class="page-item">
                    <a class="page-link" aria-label="Previous" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                        <span aria-hidden="true" class="material-icons">chevron_left</span>
                        <span>Prec.</span>
                    </a>
                </li>
            {% else %}
                <li class="page-item disabled">
                    <a class="page-link" href="javascript:;"><span>&hellip;</span></a>
                </li>
            {% endif %}

            {% if startPage > 1 %}
                <li class="page-item">
                    <a class="page-link" aria-label="Page {{ startPage }}" href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
                </li>
                {% if startPage == 3 %}
                    <li class="page-item">
                        <a class="page-link" aria-label="Page {{ startPage }}" href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
                    </li>
                {% elseif startPage != 2 %}
                    <li class="page-item">
                        <a class="page-link" aria-label="Page {{ startPage }}" href="javascript:;"><span>&hellip;</span></a>
                    </li>
                {% endif %}
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <li class="page-item">
                        <a class="page-link" aria-label="Page {{ page }}" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                    </li>
                {% else %}
                    <li class="page-item active"><a aria-label="Page {{ page }}" class="page-link" href="javascript:;">{{ page }}</a></li>
                {% endif %}

            {% endfor %}

            {% if pageCount > endPage %}
                {% if pageCount > (endPage + 1) %}
                    {% if pageCount > (endPage + 2) %}
                        <li class="page-item">
                            <a aria-label="Page {{ pageCount }}" class="page-link" href="javascript:;"><span>&hellip;</span></a>
                        </li>
                    {% else %}
                        <li class="page-item">
                            <a class="page-link" aria-label="Page {{ pageCount }}" href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a>
                        </li>
                    {% endif %}
                {% endif %}
                <li class="page-item">
                    <a class="page-link" aria-label="Page {{ pageCount }}" href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
                </li>
            {% endif %}

            {% if next is defined %}
                <li class="page-item">
                    <a class="page-link" aria-label="Suivant" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                        <span>Suiv.</span>
                        <span aria-hidden="true" class="material-icons">chevron_right</span>
                    </a>
                </li>
            {% else %}
                <li class="page-item">
                    <span><a class="page-link" href="javascript:;"><span>&hellip;</span></a></span>
                </li>
            {% endif %}
        </ul>
    </div>
{% endif %}
