{% extends 'layouts/admin/admin.html.twig' %}

{% block title %}Admin - {{ parametres.structure ? parametres.structure.name : company_name }} - {{ title }}{% endblock %}

{% block body %}
    <div class="pt-32pt">
        <div class="container-fluid page__container d-flex flex-column flex-md-row align-items-center text-center text-sm-left">
            {{ fil_arial_admin_categories(title, 'Catégories', '') }}
            <div class="row" role="tablist">
                <div class="col-auto">
                    <a href="{{ path('admin.pagescategories.index') }}" class="btn btn-outline-secondary">Liste des catégories</a>
                </div>
            </div>
        </div>
    </div>

    <div class="page-section container-fluid page__container">
        <div class="page-separator">
            <div class="page-separator__text">Nouvelle catégorie</div>
        </div>
        {% include 'flash/__flash.html.twig' %}
        <div class="col-md-7 p-0">
            <div class="card p-relativemb-0">
                <div class="card-body">
                    {{ include('admin/pages/categories/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}