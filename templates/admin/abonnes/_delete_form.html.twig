<form method="post" action="{{ path('admin.abonnes.delete', {'id': abonne.id}) }}" onsubmit="return confirm('Etes vous sûr de supprimer cet abonné?');" style="display: inline !important;">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ abonne.id) }}">
    <button class="btn btn-lg btn-link" style="padding: 0px!important;"><i class="material-icons">delete</i></button>
</form>