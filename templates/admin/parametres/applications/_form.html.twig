{{ form_start(form) }}
<div class="row mb-32pt">
    <div class="col-lg-12 d-flex align-items-center">
        <div class="flex" style="max-width: 100%">
            <div class="nav-tabs-top nav-responsive-sm card p-relative o-hidden mb-0">
                <ul class="nav nav-tabs card-header card-header-tabs-basic nav px-0">
                    <li class="nav-item">
                        <a class="nav-link active show" data-toggle="tab" href="#item-info">Infos basics</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link show" data-toggle="tab" href="#item-description">Description</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link show" data-toggle="tab" href="#item-products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link show" data-toggle="tab" href="#item-images-uploads">Images & LOGOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link show" data-toggle="tab" href="#item-socialnetwork">Réseaux sociaux</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <!-- Basic info -->
                    <div class="tab-pane fade active show" id="item-info">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="form-label">{{ form_label(form.name) }}</label>
                                        {{ form_widget(form.name) }}
                                        <a href="javascript:void(0)" class="small">{{ form_help(form.name) }}</a>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="form-label">{{ form_label(form.slogan) }}</label>
                                        {{ form_widget(form.slogan) }}
                                        <a href="javascript:void(0)" class="small">{{ form_help(form.slogan) }}</a>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="form-label">{{ form_label(form.telephone) }}</label>
                                        {{ form_widget(form.telephone) }}
                                        <a href="javascript:void(0)" class="small">{{ form_help(form.telephone) }}</a>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="form-label">{{ form_label(form.cellulaire) }}</label>
                                        {{ form_widget(form.cellulaire) }}
                                        <a href="javascript:void(0)" class="small">{{ form_help(form.cellulaire) }}</a>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="form-label">{{ form_label(form.email) }}</label>
                                        {{ form_widget(form.email) }}
                                        <a href="javascript:void(0)" class="small">{{ form_help(form.email) }}</a>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="form-label">{{ form_label(form.activite) }}</label>
                                        {{ form_widget(form.activite) }}
                                        <a href="javascript:void(0)" class="small">{{ form_help(form.activite) }}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- / Basic info -->

                    <!-- Description -->
                    <div class="tab-pane fade" id="item-description">
                        <div class="card-body">
                            <div class="form-group">
                                <label class="form-label">{{ form_label(form.adresses) }}</label>
                                {{ form_widget(form.adresses) }}
                                <a href="javascript:void(0)" class="small">{{ form_help(form.adresses) }}</a>
                            </div>

                            <div class="form-group">
                                <label class="form-label">{{ form_label(form.description) }}</label>
                                {{ form_widget(form.description) }}
                                <a href="javascript:void(0)" class="small">{{ form_help(form.description) }}</a>
                            </div>

                            <div class="form-group">
                                <label class="form-label">{{ form_label(form.keywords) }}</label>
                                {{ form_widget(form.keywords) }}
                                <a href="javascript:void(0)" class="small">{{ form_help(form.keywords) }}</a>
                            </div>
                        </div>
                    </div>
                    <!-- / Description -->

                    <!-- products -->
                    <div class="tab-pane fade" id="item-products">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">{{ form_label(form.tva) }}</label>
                                        {{ form_widget(form.tva) }}
                                        <a href="javascript:void(0)" class="small">{{ form_help(form.tva) }}</a>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">{{ form_label(form.seuilproduct) }}</label>
                                        {{ form_widget(form.seuilproduct) }}
                                        <a href="javascript:void(0)" class="small">{{ form_help(form.seuilproduct) }}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- / products -->

                    <!-- Images LOGOS -->
                    <div class="tab-pane fade" id="item-images-uploads">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="form-label">Logo blanc <small>(100x50)</small></label>
                                        {{ form_widget(form.imageFile) }}
                                        <a href="javascript:void(0)" class="small">{{ form_help(form.imageFile) }}</a>
                                        {{ form_errors(form.imageFile) }}
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="form-label">Favicon <small>(100x100)</small></label>
                                        {{ form_widget(form.imageFile2) }}
                                        <a href="javascript:void(0)" class="small">{{ form_help(form.imageFile2) }}</a>
                                        {{ form_errors(form.imageFile2) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- / Images LOGOS -->

                    <!-- Images RS -->
                    <div class="tab-pane fade" id="item-socialnetwork">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="form-label">{{ form_label(form.facebook) }}</label>
                                        {{ form_widget(form.facebook) }}
                                        <a href="javascript:void(0)" class="small">{{ form_help(form.facebook) }}</a>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="form-label">{{ form_label(form.instagram) }}</label>
                                        {{ form_widget(form.instagram) }}
                                        <a href="javascript:void(0)" class="small">{{ form_help(form.instagram) }}</a>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label class="form-label">{{ form_label(form.twitter) }}</label>
                                        {{ form_widget(form.twitter) }}
                                        <a href="javascript:void(0)" class="small">{{ form_help(form.twitter) }}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- / Images RS -->

                </div>
            </div>
            <div class="text-left mt-3">
                <button type="reset" class="btn btn-default">Annuler</button> &nbsp;
                <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i> &nbsp;{{ button_label|default('Mettre à jour les informations') }}</button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}