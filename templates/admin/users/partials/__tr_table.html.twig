<tr>
    <td>
        <div class="media flex-nowrap align-items-center" style="white-space: nowrap;">
            <div class="avatar avatar-sm mr-8pt">
                {% if user.filename %}
                    <img class="avatar-img rounded-circle" src="{{ vich_uploader_asset(user, 'imageFile') | imagine_filter('avatar') }}" alt="{{ user.username }}">
                {% else %}
                    <img  class="avatar-img rounded-circle" src="{{ asset('admin/img/avatars/1.png') }}" alt="{{ user.username }}">
                {% endif %}
            </div>
            <div class="media-body">
                <div class="d-flex flex-column">
                    <p class="mb-0"><strong class="js-lists-values-employee-name">{{ user.username }}</strong></p>
                    <small class="js-lists-values-employee-email text-50">{{ user.email }}</small>
                </div>
            </div>
        </div>
    </td>
    <td>
        <div class="d-flex align-items-center">
            <a href="{{ path('admin.users.show', {'id': user.id}) }}" class="text-warning"><i class="material-icons mr-8pt">star</i></a>
            <a href="{{ path('admin.users.show', {'id': user.id}) }}" class="text-70">
                {% for role in user.roles %}
                    {% if role == "ROLE_SUPER_ADMIN" %}
                        <span class="js-lists-values-employer-name"><i class="fa fa-lock"></i> Super administrateur</span>
                    {% endif %}
                    {% if role == "ROLE_ADMIN" %}
                        <span class="js-lists-values-employer-name"><i class="fa fa-lock"></i> Administrateur</span>
                    {% endif %}
                    {% if role == "ROLE_USER" %}
                        <span class="js-lists-values-employer-name"><i class="fa fa-user"></i> Utilisateur</span>
                    {% endif %}
                {% endfor %}
            </a>
        </div>
    </td>
    <td class="text-center js-lists-values-projects small">
        <form action="{{ path('admin.users.activer', {'id': user.id}) }}" onclick="this.submit()">
            <div class="ml-auto mb-2 mb-sm-0 custom-control-inline mr-0">
                <div class="custom-control custom-checkbox-toggle ml-8pt">
                    <input checked="" type="checkbox" id="active" {{ (user.enabled) ? 'checked' : '' }} data-id="{{ user.id }}" class="custom-control-input">
                    <label class="custom-control-label" for="active">Active</label>
                </div>
            </div>
        </form>
    </td>
    <td class="text-50 js-lists-values-activity small">
        {{ user.lastLogin|date('d/m/Y Ã  H:i:s') }}
    </td>
    <td class="js-lists-values-earnings small">
        {% if user.isOnline == true %}
            <a href="{{ path('admin.users.show', {'id': user.id}) }}" class="text-success"><i class="fa fa-circle text-success"></i> En ligne</a>
        {% else %}
            <a href="{{ path('admin.users.show', {'id': user.id}) }}" class="text-danger"><i class="fa fa-circle text-danger"></i> Hors ligne</a>
        {% endif %}
    </td>
    <td class="text-right pl-0">
        <a href="{{ path('admin.users.show', {'id': user.id}) }}" class="text-50"><i class="material-icons">folder</i></a>
        <a href="{{ path('admin.users.edit', {'id': user.id}) }}" class="text-50"><i class="material-icons">edit</i></a>
        {% include 'admin/users/_delete_form.html.twig' %}
    </td>
</tr>