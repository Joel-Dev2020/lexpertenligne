<div class="row form-group">
    <div class="col-sm-6">
        <label class="form-label">{{ form_label(form.name) }}</label>
        {{ form_widget(form.name) }}
        <a href="javascript:void(0)" class="small">{{ form_help(form.name) }}</a>
    </div>
    <div class="col-sm-6">
        <label class="form-label">{{ form_label(form.color) }}</label>
        {{ form_widget(form.color) }}
        <a href="javascript:void(0)" class="small">{{ form_help(form.color) }}</a>
    </div>
</div>
