{% extends 'layouts/admin/admin.html.twig' %}

{% block title %}Admin - {{ parametres.structure ? parametres.structure.name : company_name }} - {{ title }}{% endblock %}

{% block body %}
    <div class="pt-32pt">
        <div class="container-fluid page__container d-flex flex-column flex-md-row align-items-center text-center text-sm-left">
            {{ fil_arial_admin_categories(title, 'Articles', '') }}
            <div class="row" role="tablist">
                <div class="col-auto">
                    <a href="{{ path('admin.articles.index') }}" class="btn btn-outline-secondary">Liste des articles</a>
                </div>
            </div>
        </div>
    </div>

    <div class="page-section container-fluid page__container">
        {% include 'flash/__flash.html.twig' %}
    </div>

    <div class="page-section border-bottom-2">
        <div class="container-fluid page__container">
            {% include 'admin/articles/_form.html.twig' with {'title': 'Nouvel article'} %}
        </div>
    </div>

{% endblock %}

