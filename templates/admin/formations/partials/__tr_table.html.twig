<tr>
    <td>
        <div class="media flex-nowrap align-items-center" style="white-space: nowrap;">
            <div class="avatar avatar-sm mr-8pt">
                {% if formation.filename %}
                    <img class="avatar-img rounded-circle" src="{{ vich_uploader_asset(formation, 'imageFile') | imagine_filter('avatar') }}" alt="{{ formation.name }}">
                {% else %}
                    <img  class="avatar-img rounded-circle" src="{{ asset('assetics/images/empty/small.png') }}" alt="{{ formation.name }}">
                {% endif %}
            </div>
            <div class="media-body">
                <div class="d-flex flex-column">
                    <p class="mb-0"><strong class="js-lists-values-employee-name">{{ formation.name }}</strong></p>
                    <small class="js-lists-values-employee-email text-50">{{ formation.createdAt|date('d/m/Y') }}</small>
                </div>
            </div>
        </div>
    </td>
    <td>
        <div class="d-flex align-items-center">
            <a href="{{ path('admin.formationscategories.edit', {'id': formation.categories.id}) }}" class="text-warning"><i class="material-icons mr-8pt">star</i></a>
            <a href="{{ path('admin.formationscategories.edit', {'id': formation.categories.id}) }}" class="text-70">{{ formation.categories.name }}</a>
        </div>
    </td>
    <td class="text-50 js-lists-values-activity small">{{ formation.commentaire.count }}</td>
    <td class="text-50 js-lists-values-activity small">
        <form action="{{ path('admin.formations.activer', {'id': formation.id}) }}" onclick="this.submit()">
            <div class="ml-auto mb-2 mb-sm-0 custom-control-inline mr-0">
                <div class="custom-control custom-checkbox-toggle ml-8pt">
                    <input checked="" type="checkbox" id="active" {{ (formation.online) ? 'checked' : '' }} data-id="{{ formation.id }}" class="custom-control-input">
                    <label class="custom-control-label" for="active">Active</label>
                </div>
            </div>
        </form>
    </td>
    <td class="text-right pl-0">
        <a href="{{ path('admin.formations.show', {'id': formation.id}) }}" class="text-50"><i class="material-icons">folder</i></a>
        <a href="{{ path('admin.formations.edit', {'id': formation.id}) }}" class="text-50"><i class="material-icons">edit</i></a>
        {% include 'admin/formations/_delete_form.html.twig' %}
    </td>
</tr>