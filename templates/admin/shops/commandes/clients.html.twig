{% extends 'layouts/admin/admin.html.twig' %}

{% block title %}Admin - {{ parametres.structure ? parametres.structure.name : company_name }} - {{ title }}{% endblock %}

{% block body %}

    <div class="container-fluid flex-grow-1 container-p-y">
        <h4 class="font-weight-bold py-3 mb-0">Clients</h4>
        <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('admin.home') }}"><i class="feather icon-home"></i></a></li>
                <li class="breadcrumb-item" >Clients</li>
                <li class="breadcrumb-item active" >{{ title }}</li>
            </ol>
        </div>

        <!-- DataTable within card -->

        <div class="card">
            <div class="card-header" style="padding: 1rem 1rem;">
                <div class="row align-items-center m-l-0">
                    <div class="col-sm-6">
                        <h6>Liste des clients</h6>
                    </div>
                    <div class="col-sm-6 text-right">
                        <a class="btn btn-success text-white btn-sm btn-round" href="{{ path('admin.users.new') }}">
                            <i class="feather icon-plus"></i> Nouvel client
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-datatable table-responsive">
                <table class="datatables-demo table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Derni√®re connexion</th>
                            <th>En ligne ?</th>
                            <th>En activer ?</th>
                            <th width="100">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            {% include 'admin/users/partials/__tr_table.html.twig' %}
                        {% else %}
                            <tr>
                                <td colspan="7">{{ data_none }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
{% endblock %}

