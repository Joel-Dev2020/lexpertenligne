{% extends 'layouts/admin/admin.html.twig' %}

{% block title %}Admin - {{ parametres.structure ? parametres.structure.name : company_name }} - {{ title }}{% endblock %}

{% block body %}
    <div class="container-fluid flex-grow-1 container-p-y">
        <h4 class="font-weight-bold py-3 mb-0">Nouvel approvisionnement</h4>
        <div class="text-muted small mt-0 mb-4 d-block breadcrumb">
            {{ fil_arial_admin_categories(title, 'Shop', 'Approvisionnements') }}
        </div>

        <div class="row">
            <div class="col-md-6 offset-lg-3">
                <div class="nav-tabs-top">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#user-edit-account">Approvisionnements</a>
                        </li>
                    </ul>
                    <div class="pull-right">
                        <a href="{{ path('admin.approvisionnements.index') }}" class="btn btn-md btn-default">
                            <i class="fa fa-list"></i> {{ libelle_liste }}
                        </a>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="user-edit-account">
                            <div class="card-body pb-2">
                                {{ include('admin/shops/products/approvisionnements/_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}

