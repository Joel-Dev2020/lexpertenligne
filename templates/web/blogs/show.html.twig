{% extends 'layouts/front/base.html.twig' %}

{% block title %}{{ parametres.structure.name ?? company_name }} | {{ title }}{% endblock %}

{% block body %}
    <div class="page-section bg-white border-bottom-2">
        <div class="container-fluid page__container">
            <div class="d-flex flex-column flex-md-row align-items-center align-items-md-start flex mb-16pt text-center text-md-left">
                <div class="avatar overlay overlay--primary mb-16pt mb-md-0 mr-md-16pt">
                    {% include 'web/blogs/cards/__img_small.html.twig' %}
                    <div class="overlay__content"></div>
                </div>
                <div class="flex">
                    <h1 class="h5 measure-lead-max mb-16pt">{{ blog.name}}</h1>
                    <div class="d-flex align-items-center">
                        <a href="javascript:" class="avatar avatar-sm mr-12pt">
                            {% include 'web/blogs/cards/__img_avatar.html.twig' %}
                        </a>
                        <div class="mr-16pt">
                            <a href="javascript:" class="card-title">{{ blog.user.username }}</a>
                            <div class="d-flex align-items-center">
                                <small class="text-50 mr-2">{{ blog.updatedAt|date('d/m/Y à H:i:s') }}</small>
                                <a href="#" class="text-50"><small>Aimer</small></a>
                            </div>
                        </div>
                        <div>
                            <a href="#" class="text-50 d-flex align-items-center text-decoration-0"><i class="material-icons icon--left">favorite_border</i> 3</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid page__container">
        <div class="page-section">
            <div class="row">
                <div class="col-md-8">
                    <div class="card card-body">
                        <div class="d-flex">
                            <a href="javascript:" class="avatar avatar-sm avatar-online mr-12pt">
                                {% include 'web/blogs/cards/__img_small.html.twig' %}
                            </a>
                            <div class="flex">
                                <p class="d-flex align-items-center mb-2">
                                    <a href="javascript:" class="text-body mr-2">Publié par <strong>{{ blog.user.username ?? company_name }}</strong></a>
                                    <small class="text-muted">{{ blog.createdAt|ago }}</small>
                                </p>
                                {% if blog.extrait %}
                                    <p style="text-align: justify!important;">{{ blog.extrait|nl2br }}</p>
                                    <hr>
                                {% endif %}
                                <p style="text-align: justify!important;">{{ blog.content|raw }}</p>
                                <div class="d-flex align-items-center">
                                    <a href="javascript:" class="text-50 d-flex align-items-center text-decoration-0" style="margin-right: 20px!important;">
                                        <i class="material-icons mr-1" style="font-size: inherit;">remove_red_eye</i> {{ blog.view }}
                                    </a>
                                    <small>
                                        <a href="{{ path('likes.blog', {'id': blog.id}) }}" class="text-50 d-flex align-items-center text-decoration-0" style="margin-right: 20px!important;">
                                            <i class="material-icons mr-1" style="font-size: inherit;">thumb_up</i> 0
                                        </a>
                                    </small>
                                    <small class="blog-react-like" data-likes="{{ likes }}" data-user="{{ disLiked and disLiked.user == app.user ? true : false }}" data-isliked="{{ disLiked and disLiked.vote == true ? disLiked.vote : false }}"></small>
                                </div>
                                {% if blog.commentaire.count > 0 %}
                                    <div class="d-flex align-items-center mt-lg-5">
                                        {% set avatar = blog.filename ? absolute_url((vich_uploader_asset(blog.user, 'imageFile') | imagine_filter('avatar'))) : absolute_url(asset('assetics/images/avatar.png')) %}
                                        <blog-comment data-blog="{{ blog.id }}" data-user="{{ app.user ? app.user.id: 0 }}" data-avatar="{{ avatar }}"></blog-comment>
                                        {#{% for commentaire in blog.commentaire %}
                                            {% include 'web/partials/cards/__comment.html.twig' with {commentaire: commentaire} %}
                                        {% endfor %}
                                        <a href="#" class="btn btn-block btn-light">Voir plus de commentaires ...</a>#}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    {{ last_blogs_sidebar() }}
                </div>
            </div>
        </div>
    </div>
    {% if autresBlogs|length > 0 %}
        <div class="page-section bg-white border-top-2">
            <div class="container-fluid page__container page__container">
                <div class="page-separator">
                    <div class="page-separator__text">D'autres actualités à voir également</div>
                </div>
                <div class="row">
                    {% for autresblog in autresBlogs %}
                        <div class="col-sm-6 col-md-4">
                            <div class="card posts-card-popular">
                                {% include 'web/blogs/cards/__img.html.twig' with {'blog': autresblog} only %}
                                <div class="posts-card-popular__content">
                                    <div class="card-body d-flex align-items-center">
                                        <div class="avatar-group flex">
                                            <div class="avatar avatar-xs" data-toggle="tooltip" data-placement="top" title="{{ autresblog.user.username }}">
                                                <a href="#">
                                                    {% if autresblog.user.filename %}
                                                        <img src="{{ vich_uploader_asset(autresblog, 'imageFile') | imagine_filter('small') }}" alt="{{ autresblog.user.username }}" class="avatar-img rounded-circle">
                                                    {% else %}
                                                        <img src="{{ asset('assetics/images/empty/small.png') | imagine_filter('small') }}" alt="{{ autresblog.user.username }}" class="avatar-img rounded-circle">
                                                    {% endif %}
                                                </a>
                                            </div>
                                        </div>
                                        <a style="text-decoration: none;" class="d-flex align-items-center" href="#">
                                            <i class="material-icons mr-1" style="font-size: inherit;">remove_red_eye</i> <small>{{ autresblog.view ?? 0 }}</small>
                                        </a>
                                    </div>
                                    <div class="posts-card-popular__title card-body">
                                        <small class="text-muted text-uppercase">{{ autresblog.categories.name }}</small>
                                        <h4 class="card-title m-0">
                                            <a href="{{ path('blogs.show', {'id': autresblog.id, 'slug': autresblog.slug}) }}">{{ autresblog.name|u.truncate(50, '...') }}</a>
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}