{% for blog in blogs %}
    <div class="card posts-card">
        <div class="posts-card__content d-flex align-items-center flex-wrap">
            <div class="avatar avatar-lg mr-3">
                <a href="{{ path('blogs.show', {'id': blog.id, 'slug': blog.slug}) }}">
                    {% include 'web/blogs/cards/__img_small.html.twig' %}
                </a>
            </div>
            <div class="posts-card__title flex d-flex flex-column">
                <a href="{{ path('blogs.show', {'id': blog.id, 'slug': blog.slug}) }}" class="card-title mr-3">{{ blog.name|u.truncate(35, '...') }}</a>
                <small class="text-50">{{ pluralize(blog.view ?? 0, 'vue') }}</small>
                <small class="blog-react-like" data-likes="{{ likes[blog.id] }}" data-user="{{ disLiked[blog.id] and disLiked[blog.id].user == app.user ? true : false }}" data-isliked="{{ disLiked[blog.id] and disLiked[blog.id].vote == true ? disLiked[blog.id].vote : false }}"></small>
            </div>
            <div class="d-flex align-items-center flex-column flex-sm-row posts-card__meta">
                <div class="mr-3 text-50 text-uppercase posts-card__tag d-flex align-items-center">
                    <i class="material-icons text-muted-light mr-1">folder_open</i> {{ blog.categories.name }}
                </div>
                <div class="mr-3 text-50 posts-card__date">
                    <small>{{ blog.createdAt|date('d/m/Y Ã  H:i:s') }}</small>
                </div>
                <div class="media mr-2 ml-sm-auto align-items-center">
                    <div class="media-left mr-2 avatar-group">
                        {% include 'web/partials/__medias_users.html.twig' with {'comments': blog.commentaire} %}
                    </div>
                    <div class="media-body">
                        {% if blog.commentaire|length > 2 %}
                            <a href="javascript:">+{{ pluralize(blog.commentaire|length, 'utilisateur') }} </a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="dropdown ml-auto">
                <a href="javascript:" data-toggle="dropdown" data-caret="false" class="text-muted"><i class="material-icons">more_vert</i></a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a href="{{ path('blogs.show', {'id': blog.id, 'slug': blog.slug}) }}" class="dropdown-item">Lire l'article</a>
                </div>
            </div>
        </div>
    </div>
{% endfor %}