{% if quesepassetils|length > 0 %}
<div class="page-section border-bottom-2">
    <div class="container-fluid page__container">
        <div class="page-separator">
            <div class="page-separator__text">Que se passe t-il?</div>
        </div>
        {% for row in quesepassetils|batch(2) %}
            <div class="row card-group-row  mb-lg-5pt">
                {% for index,quesepassetil in row %}
                    <div class="col-sm-6 card-group-row__col">
                        <div class="card js-overlay card-sm overlay--primary-dodger-blue stack stack--1 card-group-row__card" data-toggle="popover" data-trigger="click">
                            <div class="card-body d-flex flex-column">
                                <div class="d-flex align-items-center">
                                    <div class="flex">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded mr-12pt z-0 o-hidden">
                                                <div class="overlay">
                                                    {% include 'web/pages/cards/__img.html.twig' with {page: quesepassetil} %}
                                                    <span class="overlay__content overlay__content-transparent">
                                                        <span class="overlay__action d-flex flex-column text-center lh-1">
                                                            <small class="h6 small text-white mb-0" style="font-weight: 500;">{{ index + 1 }}</small>
                                                        </span>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="flex">
                                                <div class="card-title">
                                                    {{ quesepassetil.name }}
                                                    <span style="float: right">
                                                        {% for categorie in quesepassetil.categories %}
                                                            <small>{{ categorie.name }}</small>
                                                        {% endfor %}
                                                    </span>
                                                </div>
                                                <p class="flex text-50 lh-1 mb-0">
                                                    <small>{{ quesepassetil.extrait|raw }}</small>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="popoverContainer d-none">
                            <div class="media">
                                <div class="media-left mr-12pt">
                                    {% include 'web/pages/cards/__img.html.twig' with {page: quesepassetil} %}
                                </div>
                                <div class="media-body">
                                    <div class="card-title">{{ quesepassetil.name }}</div>
                                    <p class="text-50 d-flex lh-1 mb-0 small">
                                        {% for categorie in quesepassetil.categories %}
                                            <small>{{ categorie.name }}</small>
                                        {% endfor %}
                                    </p>
                                </div>
                            </div>
                            <p class="mt-16pt text-70">{{ quesepassetil.extrait|raw }}</p>
                            <div class="my-32pt">
                                <div class="d-flex align-items-center mb-8pt justify-content-center">
                                    <div class="d-flex align-items-center mr-8pt">
                                        <span class="material-icons icon-16pt text-50 mr-4pt">access_time</span>
                                        <p class="flex text-50 lh-1 mb-0"><small>{{ quesepassetil.createdAt|ago }}</small></p>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center justify-content-center">
                                    <a href="{{ path('pages.show', {'id': quesepassetil.id, 'slug': quesepassetil.slug}) }}" class="btn btn-primary btn-block mr-8pt">
                                        En savoir plus
                                    </a>
                                </div>
                            </div>

                            <div class="d-flex align-items-center">
                                <small class="text-50 mr-8pt">Avis utilisateurs</small>
                                <div class="rating mr-8pt">
                                    <span class="rating__item"><span class="material-icons text-primary">star</span></span>
                                    <span class="rating__item"><span class="material-icons text-primary">star</span></span>
                                    <span class="rating__item"><span class="material-icons text-primary">star</span></span>
                                    <span class="rating__item"><span class="material-icons text-primary">star</span></span>
                                    <span class="rating__item"><span class="material-icons text-primary">star_border</span></span>
                                </div>
                                <small class="text-50">4/5</small>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
        <div class="d-flex flex-column flex-sm-row flex-wrap align-items-center justify-content-center justify-content-sm-end mt-8pt">
            <a href="{{ path('pages.categories.show', {'id': idcattheme.id, 'slug': idcattheme.slug}) }}" class="btn btn-accent flex-auto mb-8pt mb-sm-0 mr-sm-16pt">Voir plus de th√®mes</a>
        </div>
    </div>
</div>
{% endif %}