                        <i class="material-icons text-white">help</i>
                    </div>
                    <div class="flex">
                        <div class="card-title mb-4pt">Bésoin d'aide?</div>
                        <p class="card-subtitle text-70">Vous avez des préoccupation.</p>
                    </div>
                </div>
                <div class="d-flex col-md align-items-center border-bottom border-md-0 mb-16pt mb-md-0 pb-16pt pb-md-0">
                    <div class="rounded-circle bg-primary w-64 h-64 d-inline-flex align-items-center justify-content-center mr-16pt">
                        <i class="material-icons text-white">phone</i>
                    </div>
                    <div class="flex">
                        <div class="card-title mb-4pt">Contacter un expert</div>
                        <p class="card-subtitle text-70">{{ parametres.structure.telephone }}</p>
                    </div>
                </div>
                <div class="d-flex col-md align-items-center">
                    <div class="rounded-circle bg-primary w-64 h-64 d-inline-flex align-items-center justify-content-center mr-16pt">
                        <i class="material-icons text-white">update</i>
                    </div>
                    <div class="flex">
                        <div class="card-title mb-4pt">Soyez satisfait</div>
                        <p class="card-subtitle text-70">Unlock Library and learn any topic with one subscription.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if dossiers|length > 0 %}
    <div class="page-section border-bottom-2">
        <div class="container-fluid page__container">
            <div class="page-separator">
                <div class="page-separator__text">Dossiers récents</div>
            </div>
            <div class="row card-group-row">
                {% for dossier in dossiers %}
                    {% if loop.index != 4 %}
                        <div class="col-md-6 col-lg-4 card-group-row__col">
                            <div class="card card--elevated posts-card-popular overlay card-group-row__card">
                                {% include 'web/dossiers/cards/__img.html.twig' %}
                                <div class="fullbleed bg-primary" style="opacity: .5"></div>
                                <div class="posts-card-popular__content">
                                    <div class="card-body d-flex align-items-center">
                                        <div class="avatar-group flex">
                                            <div class="avatar avatar-xs" data-toggle="tooltip" data-placement="top" title="{{ dossier.user.username }}">
                                                <a href="javascript:">
                                                    {% if dossier.user.filename %}
                                                        <img src="{{ vich_uploader_asset(dossier, 'imageFile') | imagine_filter('small') }}" alt="{{ dossier.user.username }}" class="avatar-img rounded-circle">
                                                    {% else %}
                                                        <img src="{{ asset('assetics/images/empty/small.png') | imagine_filter('small') }}" alt="{{ dossier.user.username }}" class="avatar-img rounded-circle">
                                                    {% endif %}
                                                </a>
                                            </div>
                                        </div>
                                        <a style="text-decoration: none;" class="d-flex align-items-center" href="javascript:">
                                            <i class="material-icons mr-1" style="font-size: inherit;">remove_red_eye</i> <small>{{ dossier.view ?? 0 }}</small>
                                        </a>
                                    </div>
                                    <div class="posts-card-popular__title card-body">
                                        <small class="text-muted text-uppercase">{{ dossier.categories.name }}</small>
                                        <a class="card-title" href="{{ path('dossiers.show', {'id': dossier.id, 'slug': dossier.slug}) }}">{{ dossier.name|u.truncate(50, '...') }}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-md-12">
                            <div class="posts-cards">
                                {% include 'web/dossiers/cards/card.html.twig' %}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="d-flex flex-column flex-sm-row flex-wrap align-items-center justify-content-center justify-content-sm-end mt-8pt">
                <a href="javascript:" class="btn btn-secondary flex-auto mb-8pt mb-sm-0 mr-sm-16pt">Voir plus de dossiers</a>
            </div>
        </div>
    </div>
    {% endif %}

