{% for menu in menus %}
<li>
    <a href="{{ path('shop.products.categories', {'id': menu.id, 'slug': menu.slug}) }}">{{ menu.name }} <i class="fa fa-angle-down"></i></a>
    <ul class="sub_menu">
        {% for child in menu.children %}
            <li><a href="{{ path('shop.products.categories', {'id': child.id, 'slug': child.slug}) }}">{{ child }}</a></li>
        {% endfor %}
    </ul>
</li>
{% endfor %}