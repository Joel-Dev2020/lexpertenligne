{% if product.pricepromo and product.pricepromo != 0 %}
    <ins>
        <span class="product-Price-amount">
            {{ product.pricepromo|devise }}
        </span>
    </ins>
    <del>
        <span class="product-Price-amount">
            {{ product.price|devise }}
        </span>
    </del>
{% else %}
    <ins>
        <span class="product-Price-amount">
            {{ product.price|devise }}
        </span>
    </ins>
{% endif %}


