{% if product.user.filename %}
    <img src="{{ vich_uploader_asset(product.user, 'imageFile') | imagine_filter('avatar') }}" width="40" alt="{{ product.user.username }}" class="rounded-circle">
{% else %}
    <img src="{{ asset('assetics/images/avatar.png') }}" width="40" height="40" alt="{{ product.user.username }}" class="rounded-circle">
{% endif %}