<div class="col-md-4 col-lg-4 col-xl-4 card-group-row__col">
    <div class="card card-sm card--elevated p-relative o-hidden overlay overlay--primary-dodger-blue js-overlay card-group-row__card"
        {% if loop.index == 1 %}
            data-overlay-onload-show
            data-popover-onload-show
            data-force-reveal
        {% endif %}
         data-partial-height="44"
         data-toggle="popover"
         data-trigger="click">

        <a href="{{ path('pages.show', {'id': autresPage.id, 'slug': autresPage.slug}) }}" class="js-image" data-position="">
            {% if autresPage.filename %}
                <img src="{{ vich_uploader_asset(autresPage, 'imageFile') | imagine_filter('thumbnail') }}" alt="{{ autresPage.name }}" class="card-img">
            {% else %}
                <img src="{{ asset('assetics/images/empty/small.png') | imagine_filter('thumbnail') }}" alt="{{ autresPage.name }}" class="card-img">
            {% endif %}
            <span class="overlay__content align-items-start justify-content-start">
                <span class="overlay__action card-body d-flex align-items-center">
                    <i class="material-icons mr-4pt">info</i>
                    {% for cat in autresPage.categories %}
                        <span class="card-title text-white">{{ cat.name }}</span>
                    {% endfor %}
                </span>
            </span>
        </a>

        <div class="mdk-reveal__content">
            <div class="card-body">
                <div class="d-flex">
                    <div class="flex">
                        <a class="card-title" href="{{ path('pages.show', {'id': autresPage.id, 'slug': autresPage.slug}) }}">
                            {{ autresPage.name|u.truncate(30, '...') }}
                        </a>
                        {% for cat in autresPage.categories %}
                        <small class="text-50 font-weight-bold mb-4pt">{{ cat.name }}</small>
                        {% endfor %}
                    </div>
                </div>
                <div class="d-flex">
                    <div class="rating flex">
                        <span class="rating__item"><span class="material-icons">star</span></span>
                        <span class="rating__item"><span class="material-icons">star</span></span>
                        <span class="rating__item"><span class="material-icons">star</span></span>
                        <span class="rating__item"><span class="material-icons">star</span></span>
                        <span class="rating__item"><span class="material-icons">star_border</span></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="popoverContainer d-none">
        <div class="media">
            <div class="media-left mr-12pt">
                {% include 'web/pages/cards/__img.html.twig' %}
            </div>
            <div class="media-body">
                <div class="card-title mb-0">{{ autresPage.name }}</div>
                <p class="lh-1 mb-0">
                    <span class="text-50 small">Avec</span>
                    <span class="text-50 small font-weight-bold">{{ parametres.structure.name ?? company_name }}</span>
                </p>
            </div>
        </div>

        <p class="my-16pt text-70">{{ (autresPage.extrait|raw)|nl2br }}</p>

        <div class="row align-items-center">
            <div class="col text-center">
                <a href="{{ path('pages.show', {'id': autresPage.id, 'slug': autresPage.slug}) }}" class="btn btn-primary">Plus de d√©tails</a>
            </div>
        </div>
    </div>
</div>